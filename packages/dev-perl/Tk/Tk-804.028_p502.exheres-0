require perl-module [ module_author=SREZIC ]

SUMMARY="A graphical user interface toolkit for Perl"
DOWNLOADS="mirror://cpan/authors/id/${MODULE_AUTHOR:0:1}/${MODULE_AUTHOR:0:2}/${MODULE_AUTHOR}/${MY_PNV:-${PNV/_p/_}}${MODULE_EXTENSION}"
SLOT="0"
PLATFORMS="~amd64 ~x86"
MYOPTIONS=""

DEPENDENCIES="
    build+run:
        media-libs/jpeg
        media-libs/libpng
        x11-libs/libX11
        x11-libs/libXft
"

# During src_test, the newly created Tk module can't be loaded for some strange
# reason but it works fine once installed.
RESTRICT="test"

PERL_MODULE_SRC_CONFIGURE_PARAMS=( XFT=1 )

WORK=${WORKBASE}/${PNV/_p/_}
