require perl-module [ module_author=DROLSKY ]

SUMMARY="Parse and format iCal datetime and duration strings"
DESCRIPTION="
This module understands the ICal date/time and duration formats, as
defined in RFC 2445. It can be used to parse these formats in order to
create the appropriate objects.
"

SLOT="0"
PLATFORMS="~amd64"

DEPENDENCIES="
    build+run:
        dev-perl/DateTime[>=0.17]
        dev-perl/DateTime-Event-ICal[>=0.03]
        dev-perl/DateTime-Set[>=0.1]
        dev-perl/DateTime-TimeZone[>=0.22]
        dev-perl/Params-Validate[>=0.59]
"
